{
  "compilerOptions": {
    "baseUrl": ".", // Added baseUrl
    "paths": {      // Added paths
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",            
    "jsxImportSource": "react",     
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true // Added to prevent .js file generation by tsc
  }
}
